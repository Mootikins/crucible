{
  "_comment": "Minimal configuration example in JSON format",
  "_purpose": "Demonstrates basic configuration structure in JSON",
  "_environment": "minimal",
  "_format": "JSON",

  "profile": "minimal",

  "profiles": {
    "minimal": {
      "name": "minimal",
      "description": "Minimal configuration for quick start",
      "environment": "development",

      "embedding_provider": {
        "type": "ollama",
        "api": {
          "base_url": "http://localhost:11434",
          "timeout_seconds": 60,
          "retry_attempts": 2
        },
        "model": {
          "name": "nomic-embed-text",
          "max_tokens": 2048
        }
      },

      "database": {
        "type": "sqlite",
        "url": "sqlite:./crucible.db",
        "max_connections": 10,
        "timeout_seconds": 30
      },

      "server": {
        "host": "127.0.0.1",
        "port": 8080,
        "https": false,
        "timeout_seconds": 30
      },

      "logging": {
        "level": "info",
        "format": "text",
        "file": false
      },

      "env_vars": {
        "RUST_LOG": "info",
        "OBSIDIAN_VAULT_PATH": "./vault"
      },

      "settings": {
        "application": {
          "name": "Crucible",
          "version": "1.0.0"
        }
      }
    }
  },

  "_usage": [
    "Save this file as crucible-config.json",
    "DEPRECATED: crucible-mcp-server no longer exists",
    "Migration: Use the new crucible-services architecture instead",
    "See documentation for migration instructions"
  ]
}