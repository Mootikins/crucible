{
    "compilerOptions": {
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "es6",
        "declaration": true,
        "declarationMap": false,
        "sourceMap": false,
        "strict": true,
        "skipLibCheck": true,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "incremental": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "lib": [
            "ES2015",
            "ES2016.Array.Include",
            "ES2017.String",
            "ES2018.Promise",
            "ES2019",
            "ES2020",
            "ES2021",
            "DOM"
        ],
        "outDir": "dist/esm",
        "tsBuildInfoFile": ".build/tsconfig.tsbuildinfo.esm",
        "jsx": "react",
        "rootDir": "src"
    },
    "include": ["src"],
    "exclude": ["**/node_modules", "src/__tests__", "**/*.spec.ts"]
}
